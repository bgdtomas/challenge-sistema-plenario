@model proyectoABMC.Models.Telefono

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Telefono</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TelefonoId" />
            <div class="form-group">
                <label asp-for="PersonaID" class="control-label"></label>
                <select asp-for="PersonaID" class="form-control" asp-items="ViewBag.PersonaId"></select>
                <span asp-validation-for="PersonaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NroTelefono" class="control-label"></label>
                <input asp-for="NroTelefono" class="form-control" />
                <span asp-validation-for="NroTelefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" asp-route-id="@Model.PersonaID" class="btn btn-danger">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
